<% content_for :js do %>

    <script src="https://raw.github.com/berryboy/enml-js/master/lib/xml-writer.js"></script>
    <script src="https://raw.github.com/berryboy/enml-js/master/lib/xml-parser.js"></script>
    <script src="https://raw.github.com/berryboy/enml-js/master/enml.js"></script>

  <script>
  $(document).ready(function(){
    var content = "<%= @content %>";
    $('.note-panel .panel-body').html( enml.HTMLOfENML(content, []) );
  });
  </script>
<% end %>

<% if !authorized %>
  <div class="alert alert-danger">You need to <a href='/requesttoken'>authorize</a> first.</div>
<% else %>
  <div class="panel panel-default panel-info note-panel">
    <div class="panel-heading">
      <%= @note.title %>
    </div>
    <div class="panel-body">
    </div>
  </div>
<% end %>

